{% extends 'base.html.twig' %}

{% block content_title %}
    Collaborateur
{% endblock %}

{% block content %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collaborateur.id }}</td>
            </tr>
            <tr>
                <th>Everwinid</th>
                <td>{{ collaborateur.code }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ collaborateur.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ collaborateur.lastName }}</td>
            </tr>

        </tbody>
    </table>

    <br/>
    <table class="table table-striped table-bordered zero-configuration">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fait</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for survey in lists %}
            <tr>
                <td>{{ survey.id }}</td>
                <td>{{  survey.collaborateur.firstname }}</td>
                <td>{{  survey.dateSurvey|date }}</td>
                <td><a href="{{ path('survey_collaborateur_pdf', {'id':survey.id}) }}">Télécharger le pdf</a> </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fait</th>
            <th>Actions</th>
        </tr>
        </tfoot>
    </table>

    <div>
        <a href="{{ path('collaborateur_index') }}">
            <button type="button" class="btn btn-warning mr-1">
                <i class="icon-cross2"></i> Retour
            </button>
        </a>
        <a href="{{ path('survey_collaborateur_new', { 'id': collaborateur.id }) }}">
            <button type="button" class="btn btn-primary">
                <i class="icon-check2"></i> Ajouter une évaluation
            </button>
        </a>
    </div>
{% endblock %}
