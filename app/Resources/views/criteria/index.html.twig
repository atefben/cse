{% extends 'base.html.twig' %}

{% block content_title %}
    Liste des Critères
{% endblock %}

{% block content %}
    <a href="{{ path('criteria_new') }}">
        <button type="button" class="btn btn-success btn-min-width btn-round mr-1 mb-1">Ajouter un nouveau critère</button>
    </a>
    <table class="table table-striped table-bordered zero-configuration">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                {#<th>Commentaires</th>#}

                <th>Criteriatype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for criterion in criterias %}
            <tr>
                <td><a href="{{ path('criteria_show', { 'id': criterion.id }) }}">{{ criterion.id }}</a></td>
                <td>{{ criterion.label }}</td>
                {#<td>{{ criterion.desctiption }}</td>#}
                <td>{% if criterion.criteriaType == 1 %} Collaborateur{% else %} Client {% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('criteria_show', { 'id': criterion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('criteria_edit', { 'id': criterion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
