{% extends 'base.html.twig' %}

{% block content_title %}
    Edition critère
{% endblock %}

{% block content %}
    {{ form_start(form,  { 'attr': {'class': 'form'} }) }}
    <div class="form-body">
        <h4 class="form-section"><i class="icon-head"></i> Information</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="projectinput1">Titre</label>
                    {{ form_widget(form.label,  { 'attr': {'class': 'form-control', 'placeholder':"Titre"}}) }}

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="projectinput2">Type du critère</label>
                    {{ form_widget(form.criteriaType,  { 'attr': {'class': 'form-control', 'placeholder':"Type"}}) }}

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="projectinput3">Description</label>
                    {{ form_widget(form.description,  { 'attr': {'class': 'form-control', 'placeholder':"Description"}}) }}
                </div>
            </div>

        </div>

    </div>

    <div class="form-actions">
        {# <button type="button" class="btn btn-warning mr-1">
             <i class="icon-cross2"></i> Cancel
         </button>#}
        <button type="submit" class="btn btn-primary">
            <i class="icon-check2"></i> Save
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}
