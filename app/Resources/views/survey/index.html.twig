{% extends 'base.html.twig' %}

{% block content_title %}
    Liste evaluations
{% endblock %}

{% block content %}

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datesurvey</th>
                <th>Commentairesclient</th>
                <th>Signatureclient</th>
                <th>Signatureresponsableagence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for survey in surveys %}
            <tr>
                <td><a href="{{ path('survey_show', { 'id': survey.id }) }}">{{ survey.id }}</a></td>
                <td>{% if survey.dateSurvey %}{{ survey.dateSurvey|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ survey.commentairesClient }}</td>
                <td>{{ survey.signatureClient }}</td>
                <td>{{ survey.signatureResponsableAgence }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('survey_show', { 'id': survey.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('survey_edit', { 'id': survey.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('survey_new') }}">Create a new survey</a>
        </li>
    </ul>
{% endblock %}
