{% extends 'base.html.twig' %}

{% block content_title %}
    Listes de diffusion
{% endblock %}

{% block content %}



    <div class="row">
        <div class="col-sm-12 col-lg-4 col-xl-2">
            <a class="btn btn-primary btn-min-width mr-1 mb-1" href="{{ path('mailgroup_new') }}" role="button">Nouvelle liste de diffusion</a>
        </div>
    </div>


    <table class="table table-striped table-bordered zero-configuration">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libell√©</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mailGroup in mailGroups %}
            <tr>
                <td><a href="{{ path('mailgroup_show', { 'id': mailGroup.id }) }}">{{ mailGroup.id }}</a></td>
                <td>{{ mailGroup.label }}</td>
                <td>{% if mailGroup.active %}Oui{% else %}Non{% endif %}</td>
                <td>
                            <a class="btn btn-primary btn-min-width mr-1 mb-1" href="{{ path('mailgroup_show', { 'id': mailGroup.id }) }}" role="button">Editer</a>
                            <a class="btn btn-primary btn-min-width mr-1 mb-1" href="{{ path('mailgroup_delete', { 'id': mailGroup.id }) }}" role="button">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
