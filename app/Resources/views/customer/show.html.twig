{% extends 'base.html.twig' %}

{% block content_title %}
    Client
{% endblock %}

{% block content %}

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ customer.zipCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ customer.city}}</td>
            </tr>
        </tbody>
    </table>



    <table class="table table-striped table-bordered zero-configuration">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fait</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for survey in lists %}
            <tr>
                <td>{{ survey.id }}</td>
                <td>{{  survey.collaborateur.firstname }}</td>
                <td>{{  survey.dateSurvey|date }}</td>
                <td><a href="{{ path('survey_pdf', {'id':survey.id}) }}">Télécharger le pdf</a> </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fait</th>
            <th>Actions</th>
        </tr>
        </tfoot>
    </table>

    <div>
        <a href="{{ path('survey_new', { 'id': customer.id }) }}">Ajout d'un nouveau test</a>
    </div>

