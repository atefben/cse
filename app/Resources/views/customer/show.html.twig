{% extends 'base.html.twig' %}

{% block content_title %}
    Client
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <label style="font-weight: bold;">Identifiant : </label>
            {{ customer.id }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label style="font-weight: bold;">Raison Sociale : </label>
            {{ customer.name }}
        </div>
        <div class="col-md-3">
            <label style="font-weight: bold;">Adresse : </label>
            {{ customer.address }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label style="font-weight: bold;">Code Postale : </label>
            {{ customer.zipCode }}
        </div>
        <div class="col-md-3">
            <label style="font-weight: bold;">Ville : </label>
            {{ customer.city }}
        </div>
    </div>

    <br/>

    <table class="table table-striped table-bordered zero-configuration">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fait</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for survey in lists %}
            <tr>
                <td>{{ survey.id }}</td>
                <td>{{  survey.collaborateur.firstname }}</td>
                <td>{{  survey.dateSurvey|date }}</td>
                <td><a href="{{ path('survey_pdf', {'id':survey.id}) }}">Télécharger le pdf</a> </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Fait</th>
            <th>Actions</th>
        </tr>
        </tfoot>
    </table>

    <div>
        <a href="{{ path('customer_index') }}">
            <button type="button" class="btn btn-warning mr-1">
                <i class="icon-cross2"></i> Retour
            </button>
        </a>
        <a href="{{ path('survey_new', { 'id': customer.id }) }}">
            <button type="button" class="btn btn-primary">
                <i class="icon-check2"></i> Ajouter une évaluation
            </button>
        </a>
    </div>

